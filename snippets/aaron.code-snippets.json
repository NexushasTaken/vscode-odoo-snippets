{
  "Odoo Manifest": {
    "prefix": "oman",
    "body": [
      "# -*- coding: utf-8 -*-",
      "{",
      "\t\"name\": \"${1:module_name}\",",
      "\t\"sequence\": ${2|0,100|},",
      "\t\"version\": \"16.0.1.0\",",
      "\t\"depends\": [",
      "\t\t],",
      "\t\"external_dependencies\": {},",
      "\t\"author\": \"${3|Odev Solutions|}\",",
      "\t\"website\": \"${4|https://www.odevsolutions.com|}\",",
      "\t\"summary\": \"\"\"$1\"\"\",",
      "\t\"description\": \"\"\"",
      "\t\t$1",
      "\t\"\"\",",
      "\t\"category\": \"${5}\",",
      "\t\"data\": [",
      "\t\t",
      "\t],",
      "\t\"qweb\": [],",
      "\t\"css\": [],",
      "\t\"images\": [],",
      "\t\"demo\": [],",
      "\t\"installable\": True,",
      "\t\"application\": True,",
      "\t\"auto_install\": False,",
      "}"
    ],
    "description": "Odoo Manifest"
  },
  "Odoo Record Rule": {
    "prefix": "orr",
    "body": [
      "<record id=\"$1\" model=\"ir.rule\">",
      "\t<field name=\"name\">$2</field>",
      "\t<field name=\"model_id\" ref=\"$3\"/>",
      "\t<field name=\"perm_read\">${4|0,1|}</field>",
      "\t<field name=\"perm_write\">${5|0,1|}</field>",
      "\t<field name=\"perm_create\">${6|0,1|}</field>",
      "\t<field name=\"perm_unlink\">${7|0,1|}</field>",
      "\t<field name=\"domain_force\">[",
      "\t\t$9",
      "\t]</field>",
      "\t<field name=\"groups\" eval=\"$10\"/>",
      "\t<field name=\"active\">${8|0,1|}</field>",
      "</record>"
    ],
    "description": "Odoo Record Rule"
  },
  "Odoo Imports": {
    "scope": "python",
    "prefix": "oimp",
    "description": "Odoo Imports",
    "body": ["from odoo import models, fields, api"]
  },
  "Odevs Model": {
    "scope": "python",
    "prefix": "omod",
    "description": "Odoo Model",
    "body": [
      "class ${1:ModelName}(models.${2|Model,TransientModel,AbstractModel|}):",
      "\t######################",
      "\t# Private attributes #",
      "\t######################",
      "\t${3|_name,_inherit|} = \"${4:model_name}\"\n",
      "\t###################",
      "\t# Default methods #",
      "\t###################\n",
      "\t######################",
      "\t# Fields declaration #",
      "\t######################",
      "\t${5}",
      "\t##############################",
      "\t# Compute and search methods #",
      "\t##############################\n",
      "\t############################",
      "\t# Constrains and onchanges #",
      "\t############################\n",
      "\t#########################",
      "\t# CRUD method overrides #",
      "\t#########################\n",
      "\t##################",
      "\t# Action methods #",
      "\t##################\n",
      "\t####################",
      "\t# Business methods #",
      "\t####################"
    ]
  },
  "Odoo XML": {
    "scope": "xml",
    "prefix": "oxml",
    "body": ["<?xml version=\"1.0\" encoding=\"utf-8\"?>", "<odoo>", "\t$1", "</odoo>"]
  },
  "Odoo Standard View": {
    "prefix": "oview",
    "scope": "xml",
    "description": "Odoo Standard View",
    "body": [
      "<record id=\"${1:model_name}_view_${2|form,tree,kanban|}\" model=\"ir.ui.view\">",
      "\t<field name=\"name\">${3:view.name}.view.${4|form,tree,kanban|}</field>",
      "\t<field name=\"model\">$3</field>",
      "\t<field name=\"arch\" type=\"xml\">",
      "\t\t$6",
      "\t</field>",
      "</record>"
    ]
  },
  "Odoo Inherited View": {
    "prefix": "oiview",
    "scope": "xml",
    "description": "Odoo Inherited View",
    "body": [
      "<record id=\"${1:model_name}_view_${2|form,tree,kanban|}_inherit\" model=\"ir.ui.view\">",
      "\t<field name=\"name\">${3:view.name}.view.${4|form,tree,kanban|}.inherit</field>",
      "\t<field name=\"model\">$3</field>",
      "\t<field name=\"inherit_id\" ref=\"${5:inherit_external_id}\" />",
      "\t<field name=\"arch\" type=\"xml\">",
      "\t\t$6",
      "\t</field>",
      "</record>"
    ]
  },
  "Odoo Action": {
    "prefix": "oact",
    "body": [
      "<record id=\"$1\" model=\"${2|ir.actions.act_window,ir.actions.server|}\">",
      "\t<field name=\"name\">$3</field>",
      "\t<field name=\"res_model\">$4</field>",
      "\t<field name=\"view_mode\">${5|tree,form,tree\\,form|}</field>",
      "\t<field name=\"target\">${6|new,current|}</field>",
      "\t<field name=\"domain\">[]</field>",
      "\t<field name=\"context\">{}</field>",
      "</record>"
    ],
    "description": "Odoo Action"
  },
  "Odoo Menuitem": {
    "prefix": "omenui",
    "body": [
      "<menuitem",
      "\tid=\"$1\"",
      "\tname=\"$2\"",
      "\taction=\"$3\"",
      "\tparent=\"$4\"",
      "\tsequence=\"${5|1,50,500|}\" />"
    ],
    "description": "Odoo Menuitem"
  },
  "Odoo XPath": {
    "prefix": "oxp",
    "scope": "xml",
    "body": ["<xpath expr=\"$2\" position=\"${1|before,after,replace,attributes|}\">", "\t$3", "</xpath>"]
  },
  "Odoo Model Access Header": {
    "prefix": "omah",
    "scope": "csv",
    "body": ["id,name,model_id/id,group_id/id,perm_read,perm_write,perm_create,perm_unlink"]
  },
  "Odoo Model Access Record": {
    "prefix": "omar",
    "scope": "csv",
    "body": ["access_${1:access_id},access.${2:access.name},model_${3:model_name},${4:access.group},$5,$6,$7,$8"]
  }
}
